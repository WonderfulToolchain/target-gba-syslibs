MEMORY
{
        EWRAM   : ORIGIN = 0x02000000, LENGTH = 256K
        IWRAM   : ORIGIN = 0x03000000, LENGTH =  32K - 512
        VRAM    : ORIGIN = 0x06000000, LENGTH =  96K
        CART    : ORIGIN = 0x08000000, LENGTH =  32M
}

REGION_ALIAS("ROM", CART)
REGION_ALIAS("EWRAM_LOAD", CART)
REGION_ALIAS("IWRAM_LOAD", CART)
REGION_ALIAS("VRAM_LOAD", CART)

PROVIDE(__sp_sys = 0x03007F00);
PROVIDE(__sp_irq = 0x03007FA0);
PROVIDE(__sp_svc = 0x03007FE0);
